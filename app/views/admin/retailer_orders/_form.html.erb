<%= form_for @retailer_order, url: url, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :confirmation_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :confirmation_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tracking_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tracking_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tracking_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tracking_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :notes, :class => 'text_field', :value => @retailer_order.notes %>
    </div>
  </div>
	
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_retailer_orders_path, :class => 'btn' %>
  </div>
<% end %>
