<!-- Button which triggers image upload modal -->

<%= button_tag "Change Dote Picks Icon", :class=>"btn btn-primary btn-lg", :'data-toggle'=>"modal", :'data-target'=>"#myModal" %>

<!-- image upload modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag dote_picks_icon_admin_lists_path, method: :put, multipart: true do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Dote Picks Icon Uploader</h4>
        </div>
        <div class="modal-body">
          <%= file_field_tag "file", autofocus: "true", required: true %>
        </div>
        <div class="modal-footer">
          <%= button_tag "Cancel", :class => "btn btn-default", :'data-dismiss' => "modal" %>
          <%= submit_tag "Change Image", :class => "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>