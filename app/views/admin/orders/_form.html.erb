<%= form_for @order, url: url, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :transaction_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transaction_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :customer_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sales_tax_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_tax_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :retailer_order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :retailer_order_id, :class => 'text_field' %>
    </div>
  </div>
  	
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_orders_path, :class => 'btn' %>
  </div>
<% end %>
