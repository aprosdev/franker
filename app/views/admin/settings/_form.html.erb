<div class="page-header">
  <h1>Settings</h1>
</div>
<%= form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rate_this_app_enabled, :class => 'control-label' %>
    <div class="controls">
      <span class="span2">
        <%= f.radio_button :rate_this_app_enabled, true, checked: "#{'checked' if (Setting.find_by key:'rate_this_app_enabled').value == '1'}", class: "span1" %>
        <%= f.label :rate_this_app_enabled, "Yes", class: "span0" %>
      </span>
      <span class="span2">
        <%= f.radio_button :rate_this_app_enabled, false, checked: "#{'checked' if (Setting.find_by key:'rate_this_app_enabled').value != '1'}", class: "span1" %>
        <%= f.label :rate_this_app_enabled, "No", class: "span0" %>
      </span>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  test_admin_settings_path, :class => 'btn' %>
  </div>
<% end %>